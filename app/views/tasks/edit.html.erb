<div class="container w-50">
    <div>
      <h1>Edit Task</h1>
        <%= form_for(@task) do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_area :details, class: 'form-control' %>
    </div>
    <p><%= check_box_tag("title", @task.details, @task.completed) %>
      Completed
    </p>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
  <hr>
  <p><%= link_to "Back to task list", tasks_path %></p>
</div>
