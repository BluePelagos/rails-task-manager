<h1>My Tasks</h1>

<% @tasks.each do |task| %>
<p>
<%= check_box_tag(task.title, task.details, task.completed) %>
<%= link_to task.title, task_path(task) %>

<%= link_to "delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
</p>
<% end %>


<p><%= link_to "Add a new task", new_task_path %></p>

<i class="fa fa-trash" aria-hidden="true"></i>
